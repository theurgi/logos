{
  "license": "MIT",
  "scripts": {
    "minify": "svgo --config=svgo.yml",
    "clean": "find ../ -d 1 ! -name '*.svg' -type f -delete"
  },
  "devDependencies": {
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "svgo": "^1.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "../**/*.{json,yml}": "prettier --write",
    "../*.svg": "minify"
  },
  "prettier": {
    "endOfLine": "lf"
  }
}
